<div class='p-3'>
	<%= form_with model: [:profile, @resource] do |f| %>
		<div class='row'>
			<%= f.label :address, class: 'col-sm-2' %>
			<%= f.text_field :address, class: 'col-sm-8 border border-bottom' %>		
		</div>

		<div class='row mt-4'>
			<%= f.label :size, 'Size (Square foot)', class: 'col-sm-2' %>
			<%= f.text_field :size, class: 'col-sm-8 border border-bottom' %>
		</div>

		<div class='row mt-4'>
			<%= f.label :price, class: 'col-sm-2' %>
			<%= f.text_field :price, class: 'col-sm-8 border border-bottom' %>
		</div>

		<div class='row mt-4'>
		<%= f.label :description, class: 'col-sm-2' %>
		<%= f.text_area :description, class: 'col-sm-8 border border-bottom' %>
	</div>

		<div class='row mt-4'>
			<%= f.label :images, class: 'col-sm-2' %>
			<%= f.file_field :images, id: 'form_images', multiple: true, accept: 'image/*',
				class: 'col-sm-8 border border-bottom' %>
			<div id='images'>
			</div>
		</div>

		<%= f.submit class: 'mt-3 btn btn-success' %>
	<% end %>
</div>
